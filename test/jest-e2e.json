{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@brood/war-simulator/(.*)": "<rootDir>/../libs/war-simulator/src/$1",
    "@brood/war-simulator": "<rootDir>/../libs/war-simulator/src"
  }
}